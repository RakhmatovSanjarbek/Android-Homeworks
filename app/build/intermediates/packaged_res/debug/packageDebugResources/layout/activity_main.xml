<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDE0EA"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#031791"
        android:elevation="2dp"
        android:scrollbarStyle="insideOverlay"
        app:title="Homeworks"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/task_1"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:strokeWidth="2dp"
                app:strokeColor="#031791"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="First Task"
                    android:textColor="#031791"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/task_2"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:strokeWidth="2dp"
                app:strokeColor="#031791"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Second Task"
                    android:textColor="#031791"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/task_3"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:strokeWidth="2dp"
                app:strokeColor="#031791"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Third Task"
                    android:textColor="#031791"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/task_4"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:strokeWidth="2dp"
                app:strokeColor="#031791"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Fourth Task"
                    android:textColor="#031791"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/task_5"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:strokeWidth="2dp"
                app:strokeColor="#031791"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Fifth Task"
                    android:textColor="#031791"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/task_6"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:strokeWidth="2dp"
                app:strokeColor="#031791"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sixth Task"
                    android:textColor="#031791"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/task_7"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:strokeWidth="2dp"
                app:strokeColor="#031791"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Seventh Task"
                    android:textColor="#031791"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/task_8"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:strokeWidth="2dp"
                app:strokeColor="#031791"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Eighth Task"
                    android:textColor="#031791"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
