<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA5611"
    tools:context=".TenthTaskSignInPageActivity">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/task_10"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREATE YOUR LOGIN"
        android:gravity="center"
        android:textColor="#DFD3D3D3"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_below="@id/image"/>
    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@id/text"
        android:layout_marginTop="16dp"
        android:hint="User name"
        android:textColorHint="@color/white"
        android:background="@android:color/transparent"
        android:textColor="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/user_name"
        android:background="#D61855"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@id/user_name"
        android:layout_marginTop="32dp"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:background="@android:color/transparent"
        android:textColor="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/password"
        android:background="#D61855"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"/>
    <EditText
        android:id="@+id/password_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@id/password"
        android:layout_marginTop="32dp"
        android:hint="Re-Enter Password"
        android:textColorHint="@color/white"
        android:background="@android:color/transparent"
        android:textColor="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/password_enter"
        android:background="#D61855"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/password_enter"
        android:layout_marginTop="32dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CENCEL"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_alignParentLeft="true"/>
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SAVE"
                android:textColor="#A10B47"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>