<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".FourthTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#488293"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiroqni yoqish va o'chirish"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingHorizontal="80dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💡"
            android:textSize="100sp"
            android:layout_marginVertical="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020 W"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingHorizontal="80dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ko'chlanish Koyifsenti"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="2">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#5E93E1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="⚙"
                android:textSize="48sp"
                android:gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0A6291">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="📱"
                android:textSize="48sp"
                android:gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="2">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0A3E8C">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="🧭"
                android:textSize="48sp"
                android:gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0B1D60">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="☂️"
                android:textSize="48sp"
                android:gravity="center"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>