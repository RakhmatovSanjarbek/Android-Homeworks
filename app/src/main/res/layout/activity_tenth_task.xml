<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA5611"
    tools:context=".TenthTaskActivity">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/task_10"
        android:scaleType="centerCrop"/>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/image"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/white">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/facebook_icon"
            android:paddingVertical="16dp"/>
        <View
            android:layout_width="2dp"
            android:layout_height="32dp"
            android:layout_marginLeft="56dp"
            android:background="#C60C56"
            android:layout_marginTop="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with Facebook"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#C60C56"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="16dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/twitter"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/facebook"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/white">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/twitter_icon"
            android:paddingVertical="16dp"/>
        <View
            android:layout_width="2dp"
            android:layout_height="32dp"
            android:layout_marginLeft="56dp"
            android:background="#C60C56"
            android:layout_marginTop="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with Twitter"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#C60C56"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="16dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/twitter"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sign Up"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#C60C56"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Registred? Sign In"
        android:layout_below="@id/sign_up"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#D8CFCBCB"
        android:padding="16dp"/>

</RelativeLayout>